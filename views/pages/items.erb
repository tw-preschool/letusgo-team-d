<%= erb :'layout/_nav' %>

<div class="container">
  <div class="pay-table container table-responsive">
    <table class="table table-bordered table-items table-hover">
      <caption id="items-list">商品列表</caption>
      <thead>
        <tr>
          <th>名称</th>
          <th>单价(元)</th>
          <th>单位</th>
          <th>数量</th>
          <th>描述信息</th>
          <th>添加</th>
        </tr>
      </thead>
      <tbody id="items-table">
        <% Product.all.each do |item| %>
          <%if item.quantity > 0%>
          <tr>
            <td><%=item.name%></td>
            <td><%=item.price%></td>
            <td><%=item.unit%></td>
            <td><%=item.quantity%></td>
            <td><p><%=item.description%></p></td>
            <td><button type="button" class="btn btn-primary addCartButton">加入购物车</button></td>
          </tr>
          <%end%>
        <%end%>
      </tbody>
    </table>
  </div>
</div>

<% content_for :script_chunk do %>
  <script type="text/javascript" src="/scripts/model/item.js"></script>
  <script type="text/javascript" src="/scripts/model/promotion.js"></script>
  <script type="text/javascript" src="/scripts/model/shopping_cart.js"></script>
  <script type="text/javascript" src="/scripts/main.js"></script>
  <script type="text/javascript" src="/scripts/utils.js"></script>
  <script type="text/javascript" src="/scripts/item_list.js"></script>
<% end %>
