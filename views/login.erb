<%= erb :'layout/_nav_user' %>
<%= erb :'layout/_flash_page' %>

<div class="container">
  <div class="login">
    <div class="login-title">登陆</div>
    <div class="login-content">
        <form action="" name="loginForm"  role="form" method="post">
          <div class="login-name">
              <label  for="username" >用户名</label>
              <input id="login-name"  value="<%= "#{@username}" %>"type="text" name="username" placeholder="用户名" required>
          </div>
          <div class="login-password">
              <label for="password">密  码</label>
              <input id="login-password" value="<%= "#{@password}" %>" type="password" name="password" placeholder="密码" required>
          </div>
          <div class="login-submit">
              <select id="select">
                <option value="/userLogin" selectted='selected'>普通用户</option>
                <option value="/adminLogin">管理员</option>
              </select>
              <input type="hidden" value="<%= "#{@referer_url}" %>" name="referer_url">
              <button  id="login-button" onclick="loginForm.action=document.getElementById('select').value;loginForm.submit();">登陆</button>
        </div>
      </div>
    </form>
  </div>
</div>

<% content_for :script_chunk do %>
  <link rel="stylesheet" href="styles/login.css">
  <script type="text/javascript" src="/scripts/model/item.js"></script>
  <script type="text/javascript" src="/scripts/model/promotion.js"></script>
  <script type="text/javascript" src="/scripts/model/shopping_cart.js"></script>
  <script type="text/javascript" src="/scripts/main.js"></script>
<% end %>
