<%= erb :'layout/_nav_admin' %>
<%= erb :'layout/_flash_page' %>

<div class="container">
  <div class="login">
    <div class="login-title"><p>管理员登陆<p></div>
    <form action="/login" class="form-horizontal" role="form" method="post">
      <div class="form-group form-group-lg">
          <label class="col-sm-2 control-label" for="username">用户名</label>
          <div class="col-sm-10">
            <input class="form-control" type="text" name="username" placeholder="用户名" required>
          </div>
      </div>
      <div class="form-group form-group-lg">
          <label class="col-sm-2 control-label" for="password">密  码</label>
          <div class="col-sm-10">
            <input class="form-control" type="password" name="pwd" placeholder="密码" required>
          </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" id = "loginSubmit" class="btn btn-primary">提交</button>
        </div>
    </div>
    </form>
  </div>
</div>

<% content_for :script_chunk do %>
  <link rel="stylesheet" href="styles/login.css">
  <script type="text/javascript" src="/scripts/model/item.js"></script>
  <script type="text/javascript" src="/scripts/model/promotion.js"></script>
  <script type="text/javascript" src="/scripts/model/shopping_cart.js"></script>
  <script type="text/javascript" src="/scripts/main.js"></script>
<% end %>
